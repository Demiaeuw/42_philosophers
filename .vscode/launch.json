      "name": "Test 1 Philosopher Dies",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/PhiloV2/philosopher",
      "args": [
        "1",
        "800",
        "200",
        "200"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/PhiloV2",
      "externalConsole": false,
